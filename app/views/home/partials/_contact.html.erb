<section class="contact-section" id="contactanos">
    <article class="d-flex flex-row align-items-center justify-content-center invisibleSection">
        <%= image_tag  "contact.svg", size: '400', class: "mr-5 invisibleLeft" %>
        <form action="/" method="post" class="d-flex flex-column justify-content-center card p-5 w-50 invisibleRight">
            <h2 class="welcome-text">Contactanos</h2>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="form-group">
                <%= label_tag :name, 'Nombre *', class: 'form-group m-0' %>
                <%= text_field_tag :name, nil, class: "form-control", required: true %>
            </div>
            <div class="form-group">
                <%= label_tag :email, 'Email *', class: 'form-group m-0' %>
                <%= email_field_tag :email, nil,  class: "form-control", required: true %>
            </div>
            <div class="form-group">
                <%= label_tag :message, 'Mensaje *', class: 'form-group m-0' %>
                <%= text_area_tag :message, nil, rows: 10, class: "form-control", required: true %>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </article>
</section>
