<div class="authform row">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form', class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5'}) do |f| %>
    <h3>¿Olvidaste tu contraseña?</h3>
    <p>Te enviaremos las instrucciones para restaurarla.</p>
    <div class="form-group">
        <%= f.label :email, "Email *" %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.submit 'Reestablecer contraseña', :class => 'btn btn-primary' %>
    <% end %>
</div>