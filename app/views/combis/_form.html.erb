 <%= form_for(@combi, :html => {class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5'}) do |f| %>
    
    <h3> <%= title %> </h3>
    
    <div class="form-group">
        <%= f.label :licence_plate, "Patente" %>
        <%= f.text_field :licence_plate, :autofocus => true, class: 'form-control text-uppercase' %>
    </div>

    <div class="form-group">
        <%= f.label :category, "CategorÃ­a:     " %> 		
        
		<%= f.radio_button :category, "Comodo",checked: true %>
		<%= f.label :category, "Comodo" %> 
		
		<%= f.radio_button :category, "Super Comodo" %>
		<%= f.label :category, "Super Comodo" %> 

    </div>

    <% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <p class="my-0"><%= flash[:error] %></p>
    </div>
    <% end %>
    <%= f.submit save, :class => 'btn btn-primary' %> 
<% end %>