 <%= form_for(@combi, :html => {class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5'}) do |f| %>

 <h3> <%= title %> </h3>

 <div class="form-group">
     <%= f.label :licence_plate, "Patente" %>
     <%= f.text_field :licence_plate, :autofocus => true, class: 'form-control text-uppercase' %>
 </div>


 <%= f.label :category, "CategorÃ­a:", class: "form-group-label" %>
 <div class="form-check">
     <%= f.radio_button :category, "Comodo",checked: true, class: "form-check-input" %>
