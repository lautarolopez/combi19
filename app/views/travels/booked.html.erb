<ul class="list-group pt-5">
    <% if @travels.size == 0 %>
        <div class="d-flex flex-column align-items-center w-100">
            <%= image_tag  "Travels_history_empty.svg", size: '500' %>
            <h4>No tenés viajes reservados, <%= link_to  "¡empezá a viajar ahora!", travels_path %></h4>
        </div>
    <% else %>
    	<% title = 'Viajes reservados' %>
        <%= render :partial => 'future', :locals => { :travels => @travels, :title => title } %>
    <% end %>
</ul>

<script>
    $(document).ready(function() {
        $('.tooltip-wrapper').tooltip({position: "top"});
    })
</script>