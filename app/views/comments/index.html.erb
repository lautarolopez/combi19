<ul class="list-group pt-5">
    <% if flash[:success] %>
        <div class="alert alert-success" role="alert">
            <p class="my-0"><%= flash[:success] %></p>
        </div>
    <% end %>
    <% if flash[:index_error] %>
        <div class="alert alert-danger" role="alert">
            <p class="my-0"><%= flash[:index_error] %></p>
        </div>
    <% end %>
    <div class="d-flex justify-content-between w-100">
        <h1> Comentarios </h1>
    </div>
    <% @comments.each do |comment| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="row w-75">
            <span class="col-5">
                <h6 class="m-0"><%= comment.text %> </h4>
            </span>
            <span class="col-5">
                <h5 class="m-0"> Viaje </h5>
                <p class="m-0"><%= comment.travel.name %> </p>
            </span>
            <span class="col-2">
                <h5 class="m-0"> Autor </h5>
                <p class="m-0"><%= comment.author %> </p>
            </span>
        </span>
        <span>
            <%= link_to 'Eliminar', '#', "data-toggle"=>"modal", "data-target" => "#delete-#{comment.id}", class: "btn btn-danger mr-5" %>
            <div class="modal fade" id="delete-<%= comment.id %>" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">Eliminación de comentario</button>
                        </div>
                        <div class="modal-body">
                            <p> ¿Confirma que desea eliminar el comentario? </p>
                        </div>
                        <div class="modal-footer">
                            <div class="modal-footer">
                                <%= link_to 'Eliminar', comment, method: :delete, class: "btn btn-danger" %>
                                <a href="#" data-dismiss="modal" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </span>
    </li>
    <% end %>

    <% if @comments.size == 0 %>
        <div class="d-flex flex-column align-items-center w-100">
            <%= image_tag  "Comments_empty.svg", size: '450' %>
            <h4>No hay comentarios realizados.</h4>
        </div>
    <% end %>
</ul>