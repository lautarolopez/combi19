<div class="authform row">
    <%= form_for(@extra, :html => {class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5'}) do |f| %>
    <h3>Actualizar <%= @extra.name.upcase %></h3>

    <div class="form-group">
        <%= f.label :name, "Nombre *" %>
        <%= f.text_field :name, :autofocus => true, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
        <%= f.label :description, "DescripciÃ³n" %>
        <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :price, "Precio *" %>
        <%= f.number_field :price, step: 0.01, class: 'form-control', required: true %>
    </div>
    <% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <p class="my-0"><%= flash[:error] %></p>
    </div>
    <% end %>
    <%= f.submit 'Actualizar', :class => 'btn btn-primary' %>
    <% end %>
</div>