<div class="authform row">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, , class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5' }) do |f| %>
    <h3>Cambiar contraseña</h3>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
        <%= f.label :password, 'Nueva contraseña *' %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
        <%= f.label :password_confirmation, 'Confirmar nueva contraseña *' %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.submit 'Change my Password', :class => 'btn btn-primary' %>
    <% end %>
</div>