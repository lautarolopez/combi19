<div class="authform row">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true, :html => {class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5', :role => 'form'}) do |f| %>
    <h3>Registrarse</h3>

    <div class="form-row">
        <div class="form-group col">
            <%= f.label :name, "Nombre *" %>
            <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group col">
            <%= f.label :last_name, "Apellido *" %>
            <%= f.text_field :last_name, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :birth_date, "Fecha de nacimiento *" %>
        <%= f.date_field :birth_date, class: 'form-control', validate: true %>
    </div>
    <div class="form-group">
        <%= f.label :dni, "Número de documento *" %>
        <%= f.number_field :dni, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :email, "Email *" %>
        <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :password, "Contraseña * " %>
        <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation, "Repetir contraseña *" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.submit "Registrarse", :class => 'btn btn-primary' %>
    <% end %>
</div>