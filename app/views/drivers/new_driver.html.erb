<div class="authform row">
    <%# form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true, :html => {class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5', :role => 'form'}) do |f| %>
    <%= form_for(@user, :url => create_driver_path, :html => {class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5'}) do |f| %>
    <h3>Registrar chofer</h3>

    <div class="form-row">
        <div class="form-group col">
            <%= f.label :name, "Nombre *" %>
            <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group col">
            <%= f.label :last_name, "Apellido *" %>
            <%= f.text_field :last_name, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :birth_date, "Fecha de nacimiento *" %>
        <%= f.date_field :birth_date, class: 'form-control', validate: true %>
    </div>
    <div class="form-group">
        <%= f.label :dni, "NÃºmero de documento *" %>
        <%= f.number_field :dni, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :email, "Email *" %>
        <%= f.email_field :email, class: 'form-control' %>
    </div>
    <%= f.hidden_field :password, value: "combi19" %>
    <%= f.hidden_field :password_confirmation, value: "combi19" %>
    <%= f.hidden_field :role, value: "driver" %>

    <% if flash[:form_error] %>
    <div class="alert alert-danger" role="alert">
        <% flash[:form_error].each do |e| %>
        <p class="my-0"><%= e %></p>
        <% end %>
    </div>
    <% end %>
    <%# render "devise/shared/error_messages", resource: resource %>
    <%= f.submit "Registrarse", :class => 'btn btn-primary' %>
    <% end %>
</div>