 <%= form_for(@combi, :html => {class: 'd-flex flex-column justify-content-center col-lg-6 mx-auto card p-5 my-5'}) do |f| %>

	<h3> <%= title %> </h3>

	<div class="form-group">
	    <%= f.label :licence_plate, "Patente *" %>
	    <%= f.text_field :licence_plate, :autofocus => true, class: 'form-control text-uppercase', required: true %>
	</div>

	<%= f.label :category, "Categoría:", class: "form-group-label" %>
	<div class="form-check">
	    <%= f.radio_button :category, "Cómoda",checked: true, class: "form-check-input" %>
	    <%= f.label :category, "Cómoda", class: "form-check-label" %>
	</div>
	<div class="form-check mb-3">
	    <%= f.radio_button :category, "Súper cómoda", class: "form-check-input" %>
	    <%= f.label :category, "Súper cómoda", class: "form-check-label" %>
	</div>

	<div class="form-group">
        <%= f.label :capacity, 'Capacidad *' %>
        <%= f.number_field :capacity, step: 1, class: 'form-control', required: true %>
    </div>

	<% if flash[:form_error] %>
            <div class="alert alert-danger" role="alert">
                <% flash[:form_error].each do |e| %>
                    <p class="my-0"><%= e %></p>
                <% end %>
            </div>
        <% end %>

	<span class='row'>
        <span class="col-6 text-center">
            <%= button_tag "Cancelar", :type => 'button', :class => "btn-lg btn-block btn-secondary", :onclick => "location.href = '#{combis_path()}'" %>
        </span>
        <span class="col-6 text-center">
            <%= f.submit save, :class => 'btn-lg btn-block btn-primary' %> 
        </span>
    </span>

<% end %>